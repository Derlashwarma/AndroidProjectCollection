<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsExercise"
    android:paddingHorizontal="20sp"
    android:id="@+id/main_background">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/location1_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/location2_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/locatioin1"
            />
        <TextView
            android:id="@+id/location1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/location1_btn"
            android:text="Camotes Island, Philippines"
            />

        <ImageButton
            android:id="@+id/location2_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location1_btn"
            app:layout_constraintBottom_toTopOf="@+id/location3_btn"
            android:background="@drawable/location2"
            android:layout_marginTop="20sp"
            />
        <TextView
            android:id="@+id/location2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/location2_btn"
            android:text="Vigan City, Philippines"
            />

        <ImageButton
            android:id="@+id/location3_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location2_btn"
            app:layout_constraintBottom_toTopOf="@+id/location4_btn"
            android:background="@drawable/location3"
            android:layout_marginTop="20sp"
            />
        <TextView
            android:id="@+id/location3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/location3_btn"
            android:text="Cape Town, Africa"
            />

        <ImageButton
            android:id="@+id/location4_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location3_btn"
            app:layout_constraintBottom_toTopOf="@+id/location5_btn"
            android:background="@drawable/location4"
            android:layout_marginTop="20sp"
            />
        <TextView
            android:id="@+id/location4_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/location4_btn"
            android:text="Machu Picchu, Peru"
            />

        <ImageButton
            android:id="@+id/location5_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location4_btn"
            android:background="@drawable/location5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20sp"
            />
        <TextView
            android:id="@+id/location5_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/location5_btn"
            android:text="St. Petersburg, Russia"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>